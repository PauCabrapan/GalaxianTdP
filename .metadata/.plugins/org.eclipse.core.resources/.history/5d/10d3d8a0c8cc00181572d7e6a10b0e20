package personajes;

import javax.swing.JLabel;

import Colliders.*;
import grafica.EntidadGrafica;
import mapa.Celda;

public abstract class Entidad {
	protected int velocidad = 6;
	protected Celda pos;
	protected EntidadGrafica grafico;
	protected Collider collider;
	//añadir arma
	
	protected Entidad(int velocidad, Celda pos) {
		this.pos = pos;
		this.velocidad = 200;
		this.grafico = null;
	}
	
	protected Entidad(Celda pos) {
		this.pos = pos;
		this.grafico = null;
	}
	
	public int getVelocidad() {
		return velocidad;
	}

	public Celda getPos() {
		return pos;
	}
	
	protected void mover(int dir){
		Celda next = this.pos.getVecina(dir);
		if(next != null){
			this.pos = next;
			this.grafico.mover(dir);
		}
	}
	
	public JLabel getGrafico(){
		return this.grafico.getGrafico();
	}
	//añadir metodo para disparar
	
	public void colision(Entidad e) {
		
	}
	public void aceptar(Collider c) {
		
	}
}
